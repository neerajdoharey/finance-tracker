<%= render 'friends/lookup' %>
<% if @friendships.size > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td>
            <%= link_to "View profile", user_path(friend), :class => "btn btn-primary btn-xs" %>
            <%= link_to "Remove friend", friendship_path(friend), method: :delete, :date => {:confirm => "are you sure"}, :class => "btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row">
    <div class="col-md-12">
      <p>You don't have any friends, please add some! </p>
    </div>
  </div>
<% end %>
